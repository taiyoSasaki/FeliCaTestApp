<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="start"
        android:layout_alignRight="@+id/stop_button"
        android:layout_alignParentTop="true"
        android:id="@+id/start_button" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="loop"
        android:layout_alignLeft="@+id/stop_button"
        android:id="@+id/Loop_button" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="stop"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/start_button"
        android:id="@+id/stop_button" />

    <TextView
        android:id="@+id/IdmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stop_button"
        android:layout_alignLeft="@+id/stop_button"
        android:text="IDm" />

    <TextView
        android:id="@+id/IdmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/IdmLabel"
        android:layout_alignLeft="@+id/stop_button"
        android:background="#C9CFFF" />

    <TextView
        android:id="@+id/PmmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/IdmText"
        android:layout_alignLeft="@+id/stop_button"
        android:text="PMm" />

    <TextView
        android:id="@+id/PmmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PmmLabel"
        android:layout_alignLeft="@+id/stop_button"
        android:background="#C9CFFF" />

    <TextView
        android:id="@+id/ResultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PmmText"
        android:layout_alignLeft="@+id/stop_button"
        android:text="結果" />

    <TextView
        android:id="@+id/ResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ResultLabel"
        android:layout_alignLeft="@+id/stop_button"
        android:background="#C9CFFF" />

    <TextView
        android:id="@+id/DiscriminantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ResultText"
        android:layout_alignLeft="@+id/stop_button"
        android:text="成功o 失敗." />

    <TextView
        android:id="@+id/DiscriminantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DiscriminantLabel"
        android:layout_alignLeft="@+id/stop_button"
        android:background="#C9CFFF" />


</RelativeLayout>